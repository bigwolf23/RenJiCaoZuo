        <Label Content="" HorizontalAlignment="Left" Height="15" Margin="32,713,0,0" VerticalAlignment="Top" Width="1108" BorderThickness="0,0,0,6" BorderBrush="#FFD62525"/>
        <StackPanel Orientation="Vertical">
