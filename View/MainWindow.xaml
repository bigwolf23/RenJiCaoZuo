<Window x:Class="RenJiCaoZuo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1024" Width="1280" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" OpacityMask="Black" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="511*"/>
        </Grid.ColumnDefinitions>
        <Image Source="pack://SiteOfOrigin:,,,/Res/bg.png" Stretch="Fill" Grid.ColumnSpan="2"/>


        <Image Margin="50,123,50,640" Source="pack://SiteOfOrigin:,,,/Res/bg02.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Image Margin="50,384,50,379" Source="pack://SiteOfOrigin:,,,/Res/bg02.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Image Margin="364.791,645,50,10" Source="pack://SiteOfOrigin:,,,/Res/bg03.png" Stretch="Fill" Grid.Column="1"/>
        <Image Margin="50,645,662,10" Source="pack://SiteOfOrigin:,,,/Res/bg03.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <!--<Image Margin="642.791,689,50,236" Name="TempInfo_Image" Source="pack://SiteOfOrigin:,,,/Res/name.png" Stretch="Fill" Grid.Column="1"/>-->
        <Image Margin="642.791,689,50,236" Name="TempInfo_Image" Stretch="Fill" Grid.Column="1"/>

        <Image Margin="74,143,946,798" Source="pack://SiteOfOrigin:,,,/Res/title01.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Image x:Name="ActivityAndMonk_Img" Margin="74,407,946,536" Source="{Binding Activity_MonkImage}" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Image Margin="74,667,946,276" Source="pack://SiteOfOrigin:,,,/Res/title03.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Image Margin="697.791,823,150,154" Source="pack://SiteOfOrigin:,,,/Res/title.png" Stretch="Fill" RenderTransformOrigin="0.389,0.467" Grid.Column="1"/>
        <Image Margin="413.791,711,399,105" Name="QRCode_Image" Stretch="Fill" Grid.Column="1"></Image>
        <ListView Name="MonkInfo_ListView" ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="100" VerticalAlignment="Bottom" Style="{DynamicResource FZXKJW}" FontSize="18" BorderThickness="0" Background="Transparent" Grid.ColumnSpan="2" Margin="106,0,108,436" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="False" Cursor="None" IsEnabled="True" BorderBrush="Transparent" Visibility="Visible">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate >
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,0" DataContext="{Binding}" Background="Transparent">
                        <Image Source="{Binding MonkInfoImage}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="100" StretchDirection="Both" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Stretch="Fill" Margin="0" ></Image>
                        <StackPanel Orientation="Vertical" Margin="15,0,0,0">
                            <TextBlock Text="{Binding MonkName}" Margin="0,2,0,10" TextTrimming="CharacterEllipsis" TextAlignment="Left" VerticalAlignment="Top" Width="415" TextWrapping="Wrap" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" Foreground="#FFA01E1E" ></TextBlock>
                            <TextBlock Text="{Binding MonkInfo}" Margin="0,0,0,0" TextTrimming="CharacterEllipsis" TextAlignment="Left" VerticalAlignment="Top" Width="415" TextWrapping="Wrap" Style="{DynamicResource FZXKJW}" FontSize="13" Background="Transparent" ></TextBlock>
                        </StackPanel>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <ListView Name="ActivityInfo_ListView" ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="100" VerticalAlignment="Bottom" Style="{DynamicResource FZXKJW}" FontSize="18" BorderThickness="0" Background="Transparent" Grid.ColumnSpan="2" Margin="180,0,0,436" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="False" Cursor="None" IsEnabled="True" BorderBrush="Transparent" HorizontalAlignment="Left" Width="920">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Orientation="Horizontal" Margin="0,0,0,0" DataContext="{Binding}" Background="Transparent" VerticalAlignment="Center">
                        <!--<Image Source="{Binding ActivityMainImage}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="0" Height="0" StretchDirection="Both" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Stretch="Fill" Margin="0" ></Image>-->
                        <TextBox Text="{Binding ActivityMain}" IsReadOnly="True" Height="100" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="920" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" ></TextBox>
                        <TextBox Text="{Binding ActivityMainDetail}" IsReadOnly="True" Height="0" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="0" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" ></TextBox>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Label Content="微信、支付宝扫一扫" HorizontalAlignment="Center" Height="40" Margin="665.791,875,114,0" VerticalAlignment="Top" Width="242" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Grid.Column="1" Style="{DynamicResource FZXKJW}"/>
        <Image x:Name="NewsBackground_Img" Margin="257.791,0,50,902" Source="pack://SiteOfOrigin:,,,/Res/news.png" Stretch="Fill" Grid.Column="1"/>
        <Button x:Name="UpPage_Button" Content="" HorizontalAlignment="Left" Height="45" Margin="643,423,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.473,0.08" Grid.Column="1" Click="UpPage_Button_Click_1" Visibility="Hidden">
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn01.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:Name="DownPage_Button" Content="" HorizontalAlignment="Left" Height="45" Margin="788,423,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.473,0.08" Click="DownPage_Button_Click" Grid.Column="1" Visibility="Hidden">
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn03.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Border x:Name="SettingBorder_DoubleClick" BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Left" Height="71" Margin="10,10,0,0" VerticalAlignment="Top" Width="380" MouseDown="SettingBorder_DoubleClick_MouseDown" Opacity="100" Grid.ColumnSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/logo.png" Stretch="Fill"/>
            </Border.Background>
        </Border>
        <Button x:Name="TempInfo_Detail" Content="" HorizontalAlignment="Left" Height="45" Margin="779,159,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.473,0.08" Click="TemplInfo_Detail_Click" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="TemplInfo_TextBlock"  TextTrimming="CharacterEllipsis" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="98" Margin="106,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1060" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontWeight="Medium" TextOptions.TextHintingMode="Fixed" Style="{DynamicResource 'FZXKJW'}" FontSize="18"/>
        <Label x:Name="ActivityInfo_Label" HorizontalAlignment="Left" Height="40" Margin="332,41,0,0" VerticalAlignment="Top" Width="582" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontWeight="Medium" TextOptions.TextHintingMode="Fixed" Style="{DynamicResource 'FZXKJW'}" FontSize="25" Grid.Column="1" Foreground="#FFF9F3F3" VerticalContentAlignment="Center" MouseDoubleClick="ActivityInfo_Label_MouseDoubleClick"/>
        <Label Content="注意：请在手机支付的【添加备注信息】内留下施主的姓名。" Grid.Column="1" HorizontalAlignment="Left" Height="41" Margin="414,919,0,0" VerticalAlignment="Top" Width="500" Style="{DynamicResource FZXKJW}" VerticalContentAlignment="Center" Foreground="Red" FontSize="18"/>
        <StackPanel Orientation="Vertical" Height="217" Margin="93,743,702,64" DataContext="{Binding}" Background="Transparent" VerticalAlignment="Center" Style="{DynamicResource FZXKJW}" Grid.ColumnSpan="2" >
            <StackPanel Orientation="Horizontal" Height="30" Margin="12,0,10,0" DataContext="{Binding}" Background="Transparent" VerticalAlignment="Center" >
                <TextBox x:Name="HouseName" Text="" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="220" Style="{DynamicResource FZXKJW}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" Foreground="#FFA01E1E" />
                <TextBox x:Name="HousepayTypeName" Text="" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="120" Style="{DynamicResource FZXKJW}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" Foreground="#FFA01E1E" />
                <TextBox x:Name="Houseamount" Text="" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="100" Style="{DynamicResource FZXKJW}" FontSize="20" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" Margin="0,2" Foreground="#FFA01E1E" />
            </StackPanel>
            <Line xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                        X1="10" Y1="1"  
                        X2="440" Y2="1"  
                        Stroke="#FFA01E1E" StrokeDashArray="2, 2"  
                        StrokeThickness="2" />
            <ListView x:Name="DonateInfo_List" HorizontalAlignment="Left" Height="180" Margin="10,0,0,0" VerticalAlignment="Top" Width="464" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Hidden" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Auto" Style="{DynamicResource FZXKJW}" FontSize="18" BorderThickness="0" Background="Transparent" IsEnabled="True">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Height="30" Margin="0,0,0,0" DataContext="{Binding}" Background="Transparent" VerticalAlignment="Center" Style="{DynamicResource FZXKJW}" >
                            <TextBox Text="{Binding Name}" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="220" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" />
                            <TextBox Text="{Binding payTypeName}" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="120" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" />
                            <TextBox Text="{Binding amount}" IsReadOnly="True" Height="25" VerticalContentAlignment="Center" TextAlignment="Left" VerticalAlignment="Center" Width="100" Style="{DynamicResource FZXKJW}" FontSize="18" Background="Transparent" HorizontalAlignment="Center" BorderThickness="0" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <Button x:Name="Activity_Detail" Content="" HorizontalAlignment="Left" Height="45" Margin="779,423,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.473,0.08" Click="Activity_Detail_Click" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button x:Name="ActivityInfo_Next_Button" HorizontalAlignment="Left" Height="46" Margin="847,513,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.473,0.08" Click="ActivityInfo_Next_Button_Click" Grid.Column="1">
            <Button.Content>
                <Image Source="pack://SiteOfOrigin:,,,/Res/arrow2.png" Stretch="None"/>
            </Button.Content>
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn-bg1.png" Stretch="Fill"/>
            </Button.Background>

        </Button>
        <Button x:Name="ActivityInfo_Prev_Button" HorizontalAlignment="Left" Height="46" Margin="115,513,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.473,0.08" Click="ActivityInfo_Prev_Button_Click">
            <Button.Content>
                <Image Source="pack://SiteOfOrigin:,,,/Res/arrow1.png" Stretch="None"/>
            </Button.Content>
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/btn-bg1.png" Stretch="Fill"/>
            </Button.Background>

        </Button>

    </Grid>
</Window>
